<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>ant_template</display-name>
  <servlet>
    <display-name>ItemController</display-name>
    <servlet-name>ItemController</servlet-name>
    <servlet-class>jsp.ItemController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ItemController</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
   <resource-ref>
    <res-ref-name>comp/env/jdbc/ExampleDS</res-ref-name>
    <!-- Comment the above line, and uncomment the following one to deploy on JBoss -->
    <!-- <res-ref-name>jdbc/ExampleDS</res-ref-name> -->
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>